{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": [
      "dom",
      "ESNext",
      "dom.iterable"
    ],
    "outDir": "./dist_server",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true
  },
  "include": [
    "./src/Server/**/*",
    "./src/Shared/**/*",
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}