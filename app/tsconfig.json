{
  "compilerOptions": {
    "target": "es2019",
    "module": "NodeNext",
    "lib": [
      "dom",
      "es2019",
      "dom.iterable"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}