{
  "lock": true,
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true
  },
  "tasks": {
    "install": "deno install",
    "generate": "cd ./dev && deno run --allow-read --allow-write ./generate.mts",

    "run-only": "deno run --allow-write --allow-read --allow-net --allow-env --allow-run ./server/main.ts",
    "run-dev": "deno task generate && deno task start",
    "run-test": "deno task generate && deno task preview",
    "run-full": "deno task install && deno task generate && deno task run-only",

    "test": "deno task generate && deno test --allow-all --trace-leaks --watch",
    "check": "deno fmt --check && deno lint && deno check **/*.*ts && deno check **/*.tsx && deno check **/*.mts",

    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --watch=server/static/,server/routes/ server/dev.ts",
    "build": "deno run -A server/dev.ts build",

    "preview": "deno run -A server/main.ts",

    "update": "deno run -A -r https://fresh.deno.dev/update ."
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "imports": {
    "$std/": "https://deno.land/std@0.216.0/",
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "chalk": "npm:chalk@^5.3.0"
  },
  "fmt": {
    "lineWidth": 120,
    "semiColons": false,
    "singleQuote": true,
    "indentWidth": 4
  }
}
