{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "es2019",
      "dom.iterable"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true
  },
  "include": [
    "./src/**/*"
  ]
}